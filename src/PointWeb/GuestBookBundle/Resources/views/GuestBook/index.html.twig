{% extends 'PointWebAdminBundle::base.html.twig' %}

{% block content_right %}
    <h1>Liste des commentaires du livre d'or</h1>

    <table class="table table-striped table-hover sortable">
        <thead>
        <tr>
            <th style="width: 5px;"></th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Email</th>
            <th>Commentaire</th>
            <th>Notation</th>
            <th>Position</th>
            <th>En ligne</th>
            <th style="width: 125px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr data-url="{{ path('admin_guestbook_sort', {'id':entity.id}) }}">
                <td class="sorter"><i class="mdi-action-swap-vert"></i></td>
                <td><a href="{{ path('admin_guestbook_show', { 'id': entity.id }) }}">{{ entity.lastname }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.comment|raw }}</td>
                <td>{{ entity.notation }}</td>
                <td>{{ entity.position }}</td>
                <td>{% if entity.online %}Oui{% else %}Non{% endif %}</td>
                <td>
                    <div class="btn-group-vertical">
                        <a href="{{ path('admin_guestbook_show', {'id':entity.id}) }}" class="btn btn-primary"><i
                                    class="fa fa-eye"></i> Voir</a>
                        <a href="{{ path('admin_guestbook_edit', {'id':entity.id}) }}" class="btn btn-primary"><i
                                    class="fa fa-pencil"></i> Modifier</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_guestbook_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ajouter</a>
{% endblock %}

