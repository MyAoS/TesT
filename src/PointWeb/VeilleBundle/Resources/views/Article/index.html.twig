{% extends 'PointWebAdminBundle::base.html.twig' %}

{% block content_right %}

    <h1>Article list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>H1</th>
                <th>Titre</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Photo1</th>
                <th>Photo2</th>
                <th>Photo3</th>
                <th>Url1</th>
                <th>Url2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.h1 }}</td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.reference }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.photo1 }}</td>
                <td>{{ entity.photo2 }}</td>
                <td>{{ entity.photo3 }}</td>
                <td>{{ entity.url1 }}</td>
                <td>{{ entity.url2 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('article_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
