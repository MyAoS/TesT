{% extends 'PointWebAdminBundle::base.html.twig' %}

{% block  content_right %}
    <h1>Liste des Pages</h1>

    <table class="table table-striped table-hover sortable">
        <thead>
        <tr>
            <th style="width: 5px;"></th>
            <th>Titre</th>
            <th style="width: 125px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="sorter"><i class="mdi-action-swap-vert"></i></td>
                <td><a href="{{ path('admin_page_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>
                    <div class="btn-group-vertical">
                        <a href="{{ path('admin_page_show', {'id':entity.id}) }}" class="btn btn-primary"><i
                                    class="fa fa-eye"></i> Voir</a>
                        <a href="{{ path('admin_page_edit', {'id':entity.id}) }}" class="btn btn-primary"><i
                                    class="fa fa-pencil"></i> Modifier</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_page_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ajouter</a>
{% endblock %}
