{% extends 'PointWebAdminBundle::base.html.twig' %}

{% block  content_right %}
    <h1>Page</h1>

    <div class="panel panel-info">
        <div class="panel-heading">Titre</div>
        <div class="panel-body">
            {{ entity.title }}
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Chemin de la page</div>
        <div class="panel-body">
            {{ entity.path }}
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Description</div>
        <div class="panel-body">
            {{ entity.content|raw }}
        </div>
    </div>


    <a href="{{ path('admin_page') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour Ã  la liste</a>
    <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>
        Modifier</a>
    {{ form(delete_form) }}
{% endblock %}
